@model EShopper.Dto.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:5px;margin-bottom:50px">
    <div class="col-sm-4 col-sm-offset-1">
        <div class="login-form">
            <h2>Login to your account</h2>
            <form action="@Url.Action("Login","Account")" method="post">
                <input type="text" asp-for="Username" placeholder="Username" />
                <input type="password" asp-for="Password" placeholder="Password" />
                <span>
                    <input type="checkbox" class="checkbox">
                    Keep me signed in
                </span>
                <button type="submit" class="btn btn-default">Login</button>
            </form>
        </div>
    </div>
    <div class="col-sm-1">
        <h2 class="or">OR</h2>
    </div>
    <div class="col-sm-4">
        <div class="signup-form">
            <h2>New User Signup!</h2>
            <form action="@Url.Action("CreateUser","Account")" method="post">
                <input type="text" name="UserName" placeholder="User Name" />
                <input type="text" name="FirstName" placeholder="First Name" />
                <input type="text" name="LastName" placeholder="Last Name" />
                <input type="email" name="EmailAddress" placeholder="Email Address" />
                <input type="password" name="Password" placeholder="Password" />
                <button type="submit" class="btn btn-default">Signup</button>
                @if (TempData["Message"] != null)
                {
                    <br />
                    <label>Message : @TempData["Message"]</label>
                }
            </form>
        </div>
    </div>
</div>

